    "prettier": "3.8.1",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1"
  },
  "module": "index.ts",
  "private": false,
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "prettier": {}
